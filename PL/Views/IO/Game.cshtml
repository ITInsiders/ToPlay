@using TP.PL.Helpers;
@{
    PageInfo Info = (PageInfo)ViewBag.Info;
    Layout = Info.LayoutHref;
}
<div class="Data" data-view="@Info.View" data-controller="@Info.Controller">
    <div class="HeaderTemp">
        <div class="Info">
            <div class="Timer">
                <span>@Info.Language.Get("time left"): </span>
                <span id="Timer">60</span>
                <span> @Info.Language.Get("seconds")</span>
            </div>
        </div>
        <div class="Buttons">
            <button type="button" class="Send">
                <span>@Info.Language.Get("send")</span>
            </button>
            <button type="button" class="Lose">
                <span>@Info.Language.Get("lose")</span>
            </button>
        </div>
    </div>
</div>
<div class="Gaming container">
    <div class="row">
        <div class="Line col-12">
            <div class="Title">
                <span>@Info.Language.Get("who of the players")</span> 
                <span>@Info.Language.Get("will take a spider in the hand?")</span>
            </div>
        </div>
        <div class="List col-12 row justify-content-center">
            @{
                for (int i = 0; i < 8; i++)
                {
                    <div class="Element col-6 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="Gamer"
                             style="background-image: url('/Resources/IMG/Users/CEH4TOP/0.jpg')">
                            <div class="Name"><span>CEH4TOP</span></div>
                        </div>
                    </div>
                };
            }
        </div>
    </div>
</div>